model User {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name String

    messages Message[]
    roles    Role[]
}

model Permit {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    description String
    permissions String

    rolesRequired   Role[]
    threadsRequired Thread[]
}

model Role {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name String

    users   User[]
    permits Permit[]
}

model Thread {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name     String
    position Int
    pinned   Boolean

    messages Message[]
    permits  Permit[]

    children Thread[] @relation(name: "thread")
    parent   Thread?  @relation(name: "thread", fields: [parentId], references: [id])
    parentId String?
}

model Message {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    content String

    author   User?   @relation(fields: [authorId], references: [id])
    authorId String?
    thread   Thread? @relation(fields: [threadId], references: [id])
    threadId String?
}
